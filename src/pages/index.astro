---
import Layout from "../layouts/base.astro"
import { getCollection } from "astro:content"

const recipes = await getCollection("recipes")
---

<Layout>
  <div class="mx-auto mt-12 max-w-7xl p-6">
    <h1 class="text-2xl font-medium">Recipes</h1>
    {
      recipes.length > 0 && (
        <ul class="mt-4">
          {recipes.map((recipe) => (
            <li>
              <a class="underline" href={`recipes/${recipe.slug}`}>
                {recipe.data.title}
              </a>
            </li>
          ))}
        </ul>
      )
    }
  </div>
</Layout>
